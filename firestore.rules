rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true; // Adjust conditions based on your requirements for public access
    }

    // Allow write access only for authorized users (example: your server or specific users)
    match /reviews/{document=**} {
      allow write: if request.auth != null; 
    }
  }
}